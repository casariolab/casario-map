# ┌───────────── minute (0 - 59)
# │     ┌───────────── hour (0 - 23)
# │     │     ┌───────────── day of month (1 - 31)
# │     │     │     ┌───────────── month (1 - 12)
# │     │     │     │     ┌───────────── day of week (0 - 6) (Sunday to Saturday; 7 is also Sunday on some systems)
# │     │     │     │     │

  0     0     *     *     *     date && pg_dump "host=${DATABASE}_db port=5432 dbname=${DATABASE} user=${POSTGRES_USER} password=${POSTGRES_PASSWORD}" > /pgdumps/${DATABASE}_daily.pgdump && echo "${DATABASE} dump successful"
